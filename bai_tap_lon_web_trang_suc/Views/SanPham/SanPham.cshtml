@{
    Layout = null;
}

@model PagedList.IPagedList<bai_tap_lon_web_trang_suc.Models.SanPham>

@using PagedList;
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Colo Shop Categories</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="Colo Shop Template">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="~/Content/assets/styles/bootstrap4/bootstrap.min.css">
    <link href="~/Content/assets/plugins/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" type="text/css" href="~/Content/assets/plugins/OwlCarousel2-2.2.1/owl.carousel.css">
    <link rel="stylesheet" type="text/css" href="~/Content/assets/plugins/OwlCarousel2-2.2.1/owl.theme.default.css">
    <link rel="stylesheet" type="text/css" href="~/Content/assets/plugins/OwlCarousel2-2.2.1/animate.css">
    <link rel="stylesheet" type="text/css" href="~/Content/assets/plugins/jquery-ui-1.12.1.custom/jquery-ui.css">
    <link rel="stylesheet" type="text/css" href="~/Content/assets/styles/categories_styles.css">
    <link rel="stylesheet" type="text/css" href="~/Content/assets/styles/categories_responsive.css">
    <style>
        .product_image {
            height:255px;
        }
    </style>
</head>

<body>

    <div class="super_container">

        <!-- Header -->

        <header class="header trans_300">

            <!-- Top Navigation -->

            <div class="top_nav">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="top_nav_left">mIỄN PHÍ VẬN CHUYỂN CHO TẤT CẢ CÁC ĐƠN HÀNG Ở VIỆT NAM TRÊN $50</div>
                        </div>
                        <div class="col-md-6 text-right">
                            <div class="top_nav_right">
                                <ul class="top_nav_menu">

                                    <!-- Currency / Language / My Account -->


                                    <li class="language">
                                        <a href="#">
                                            VietNamese
                                            <i class="fa fa-angle-down"></i>
                                        </a>
                                        <ul class="language_selection">
                                            <li><a href="#">French</a></li>
                                            <li><a href="#">Italian</a></li>
                                            <li><a href="#">German</a></li>
                                            <li><a href="#">English</a></li>
                                        </ul>
                                    </li>
                                    <li class="account">
                                        <a href="#">
                                            Tài khoản
                                            <i class="fa fa-angle-down"></i>
                                        </a>
                                        <ul class="account_selection">
                                            @if (Session["TaiKhoan"] != null)
                                            {
                                                <li><a href="/dangnhap/dangnhap"><i class="fa fa-sign-out" aria-hidden="true"></i>Đăng xuất</a></li>
                                            }
                                            else
                                            {
                                                <li><a href="/dangnhap/dangnhap"><i class="fa fa-sign-in" aria-hidden="true"></i>Đăng nhập</a></li>
                                                <li><a href="/dangnhap/dangnhap"><i class="fa fa-user-plus" aria-hidden="true"></i>Đăng ký</a></li>
                                            }
                                        </ul>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Main Navigation -->

            <div class="main_nav_container">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12 text-right">
                            <div class="logo_container">
                                <a href="/trangchu/trangchu">colo<span>shop</span></a>
                            </div>
                            <nav class="navbar">
                                <ul class="navbar_menu">
                                    <li><a href="/trangchu/trangchu">Trang chủ</a></li>
                                    <li><a href="/sanpham/sanpham">Cửa hàng</a></li>
                                    <li><a href="#">Tin tức</a></li>
                                    <li><a href="#">Liên hệ</a></li>

                                </ul>
                                <ul class="navbar_user">
                                    <li><a href="#"><i class="fa fa-search" aria-hidden="true"></i></a></li>
                                    <li>
                                        @if (ViewBag.Session != 0)
                                        {
                                            <a href="/khachhang/Sua">
                                                <i class="fa fa-user" aria-hidden="true"></i>
                                            </a>
                                        }
                                        else
                                        {
                                            <a href="/DangNhap/DangNhap">
                                                <i class="fa fa-user" aria-hidden="true"></i>
                                            </a>
                                        }
                                    </li>
                                    <li class="checkout">
                                        <a href="/giohang/index">
                                            <i class="fa fa-shopping-cart" aria-hidden="true"></i>
                                            @{ int soluong = 0;
                                                if (ViewBag.soluonggiohang != null)
                                                {
                                                    soluong = ViewBag.soluonggiohang;
                                                } }

                                            <span id="checkout_items" class="checkout_items">@soluong</span>
                                        </a>
                                    </li>
                                </ul>
                                <div class="hamburger_container">
                                    <i class="fa fa-bars" aria-hidden="true"></i>
                                </div>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>

        </header>


    </div>
    <div class="container product_section_container">
        <div class="row">
            <div class="col product_section clearfix">

                <!-- Breadcrumbs -->

                <div class="breadcrumbs d-flex flex-row align-items-center">
                    <ul>
                        <li><a href="index.html">Trang chủ</a></li>
                        <li class="active"><a href="index.html"><i class="fa fa-angle-right" aria-hidden="true"></i>Cửa hàng</a></li>
                    </ul>
                </div>

                <!-- Sidebar -->

                <div class="sidebar">
                    <div class="sidebar_section">
                        <div class="sidebar_title">
                            <h5>Bộ lọc</h5>
                        </div>
                        @using (Html.BeginForm("SanPham", "SanPham", FormMethod.Get))
                        {
                            var loaisanphams = ViewBag.LoaiSanPhams;
                    <ul>
                        @foreach (var loaiSanPham in loaisanphams as List<bai_tap_lon_web_trang_suc.Models.LoaiSanPham>)
                        {
                            <li>
                                <div style="display:flex;align-items:center">
                                    @{
                                        var isSelected = ViewBag.check != null && ((string[])ViewBag.check).Contains(loaiSanPham.TenloaiSanPham);
                                    }
                                    <input type="checkbox" name="loaiSanPhams" value="@loaiSanPham.TenloaiSanPham" @(isSelected ? "checked='checked'" : "") />
                                    <span style="margin-left:10px">@loaiSanPham.TenloaiSanPham</span>
                                </div>
                            </li>
                        }

                    </ul>

                            <div style="margin-top:10px">
                                <input type="submit" value="Tìm kiếm" class="btn btn-default" style="background-color: #fe4c50; color: white; width: 120px" />
                            </div>
                        }

                    </div>


                </div>
               
                <!-- Main Content -->

                <div class="main_content">
                    <div class="products_iso">
                        <div class="row">
                            <div class="col">

                                <!-- Product Sorting -->

                                <div class="product_sorting_container product_sorting_container_top">
                                    <ul class="product_sorting">
                                        <li>
                                            <span class="type_sorting_text">Mặc định</span>
                                            <i class="fa fa-angle-down"></i>
                                            <ul class="sorting_type">
                                                <li class="type_sorting_btn" data-isotope-option='{ "sortBy": "original-order" }'><span>Mặc định</span></li>
                                                <li class="type_sorting_btn" data-isotope-option='{ "sortBy": "price" }'><span>Giá</span></li>
                                                <li class="type_sorting_btn" data-isotope-option='{ "sortBy": "name" }'><span>Tên</span></li>
                                            </ul>
                                        </li>
                                    </ul>
                                    <div class="pages d-flex flex-row align-items-center">
                                        <div class="page_current">
                                            <span>@Model.PageNumber</span>
                                            <ul class="page_selection">
                                                @for (int i = 1; i <= Model.PageCount; i++)
                                                {
                                                    <li class="@(i == Model.PageNumber ? "active" : "")"><a href="@Url.Action("SanPham", new { page = i })">@i</a></li>
                                                }
                                            </ul>
                                        </div>
                                        <div class="page_total"><span>of</span> @Model.PageCount</div>
                                        @if (Model.HasNextPage)
                                        {
                                            <div id="next_page" class="page_next"><a href="@Url.Action("SanPham", new { page = Model.PageNumber + 1 })"><i class="fa fa-long-arrow-right" aria-hidden="true"></i></a></div>
                                        }
                                    </div>

                                </div>

                                <!-- Product Grid -->
                                <div class="product-grid">
                                    @if (ViewBag.SanPhams != null)
                                    {
                                        foreach (var sanpham in ViewBag.SanPhams)
                                        {
                                            <div class="product-item man">
                                                <a href="@Url.Action("ChiTietSanPham", "ChiTietSanPham", new { id = sanpham.ID_SanPham })" class="product-item-link">
                                                    <!-- Nội dung sản phẩm -->
                                                    <div class="product discount product_filter">
                                                        <div class="product_image">
                                                            @if (!string.IsNullOrEmpty(sanpham.HinhAnh))
                                                            {
                                                                <img src="@Url.Content(sanpham.HinhAnh)" alt="Ảnh sản phẩm" style="max-width:222px;height:auto ; margin-top:54px" />
                                                            }
                                                        </div>
                                                        <div class="favorite favorite_left"></div>

                                                        @{
                                                            decimal giaBan = (decimal)(sanpham.GiaBan ?? 0);
                                                            decimal giamGia = (decimal)(sanpham.GiamGia ?? 0);
                                                            decimal discountedPrice = giaBan - (giaBan * giamGia) / 100;
                                                        }

                                                        <div class="product_bubble product_bubble_right product_bubble_red d-flex flex-column align-items-center"><span>@sanpham.GiamGia%</span></div>
                                                        <div class="product_info">
                                                            <h6 class="product_name"> @sanpham.TenSanPham</h6>
                                                            <div class="product_price"> @discountedPrice$<span> $@sanpham.GiaBan</span></div>
                                                        </div>
                                                    </div>
                                                </a>
                                                <div class="red_button add_to_cart_button">
                                                    @if (Session["TaiKhoan"] != null)
                                                    {
                                                        @Html.ActionLink("Thêm vào giỏ hàng", "AddToCart", "GioHang", new { sanpham = sanpham.ID_SanPham }, "")
                                                    }
                                                    else
                                                    {
                                                        @Html.ActionLink("Thêm vào giỏ hàng", "DangNhap", "DangNhap")
                                                    }
                                                </div>
                                            </div>
                                        }
                                    }
                                </div>


                                <!-- Product Sorting -->
                                <div class="product_sorting_container product_sorting_container_bottom clearfix">

                                    <div class="pages d-flex flex-row align-items-center">
                                        <div class="page_current">
                                            <span>@Model.PageNumber</span>
                                            <ul class="page_selection">
                                                @for (int i = 1; i <= Model.PageCount; i++)
                                                {
                                                    <li><a href="@Url.Action("SanPham", new { page = i })">@i</a></li>
                                                }
                                            </ul>
                                        </div>
                                        <div class="page_total"><span>of</span> @Model.PageCount</div>
                                        @if (Model.HasNextPage)
                                        {
                                            <div id="next_page_1" class="page_next"><a href="@Url.Action("SanPham", new { page = Model.PageNumber + 1 , })"><i class="fa fa-long-arrow-right" aria-hidden="true"></i></a></div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="benefit">
        <div class="container">
            <div class="row benefit_row">
                <div class="col-lg-3 benefit_col">
                    <div class="benefit_item d-flex flex-row align-items-center">
                        <div class="benefit_icon"><i class="fa fa-truck" aria-hidden="true"></i></div>
                        <div class="benefit_content">
                            <h6>Miễn phí vận chuyển</h6>

                        </div>
                    </div>
                </div>
                <div class="col-lg-3 benefit_col">
                    <div class="benefit_item d-flex flex-row align-items-center">
                        <div class="benefit_icon"><i class="fa fa-money" aria-hidden="true"></i></div>
                        <div class="benefit_content">
                            <h6>thanh toán khi nhận hàng</h6>

                        </div>
                    </div>
                </div>
                <div class="col-lg-3 benefit_col">
                    <div class="benefit_item d-flex flex-row align-items-center">
                        <div class="benefit_icon"><i class="fa fa-undo" aria-hidden="true"></i></div>
                        <div class="benefit_content">
                            <h6>Đổi trả trong 45 ngày</h6>

                        </div>
                    </div>
                </div>
                <div class="col-lg-3 benefit_col">
                    <div class="benefit_item d-flex flex-row align-items-center">
                        <div class="benefit_icon"><i class="fa fa-clock-o" aria-hidden="true"></i></div>
                        <div class="benefit_content">
                            <h6>Mở cả tuần</h6>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Newsletter -->

    <div class="newsletter">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="newsletter_text d-flex flex-column justify-content-center align-items-lg-start align-items-md-center text-center">
                        <h4>Bản tin</h4>
                        <p> Đăng ký nhận bản tin và được giảm giá 20% cho lần mua hàng đầu tiên</p>
                    </div>
                </div>
                <div class="col-lg-6">
                    <form action="post">
                        <div class="newsletter_form d-flex flex-md-row flex-column flex-xs-column align-items-center justify-content-lg-end justify-content-center">
                            <input id="newsletter_email" type="email" placeholder="Your email" required="required" data-error="Valid email is required.">
                            <button id="newsletter_submit" type="submit" class="newsletter_submit_btn trans_300" value="Submit">Đăng ký</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- Footer -->

    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="footer_nav_container d-flex flex-sm-row flex-column align-items-center justify-content-lg-start justify-content-center text-center">
                        <ul class="footer_nav">
                            <li><a href="#">Bản tin</a></li>

                            <li><a href="contact.html">Liên hệ</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="footer_social d-flex flex-row align-items-center justify-content-lg-end justify-content-center">
                        <ul>
                            <li><a href="#"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
                            <li><a href="#"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
                            <li><a href="#"><i class="fa fa-instagram" aria-hidden="true"></i></a></li>
                            <li><a href="#"><i class="fa fa-skype" aria-hidden="true"></i></a></li>
                            <li><a href="#"><i class="fa fa-pinterest" aria-hidden="true"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="footer_nav_container">
                        <p> Địa chỉ: 16 phố Văn Hội, Đức Thắng, Từ Liêm, Hà Nội</p>
                        <p> Số điện thoại: 0332624566</p>
                        <p> Facebook: https://www.facebook.com/tan0903 </p>

                    </div>
                </div>
            </div>
        </div>
    </footer>


    </div>

    <script src="~/Content/assets/js/jquery-3.2.1.min.js"></script>
    <script src="~/Content/assets/styles/bootstrap4/popper.js"></script>
    <script src="~/Content/assets/styles/bootstrap4/bootstrap.min.js"></script>
    <script src="~/Content/assets/plugins/Isotope/isotope.pkgd.min.js"></script>
    <script src="~/Content/assets/plugins/OwlCarousel2-2.2.1/owl.carousel.js"></script>
    <script src="~/Content/assets/plugins/easing/easing.js"></script>
    <script src="~/Content/assets/plugins/jquery-ui-1.12.1.custom/jquery-ui.js"></script>
    <script src="~/Content/assets/js/categories_custom.js"></script>
</body>

</html>