        <!-- Content Wrapper. Contains page content -->
       
        <div class="content-wrapper">

            <!-- Script để vẽ biểu đồ hình tròn -->
            
            <div class="canva_bieudo">
                <div>
                    @using (Html.BeginForm("Index", "Home", FormMethod.Post))
                    {
                        <label for="nam">Chọn năm:</label>
                        <select name="nam" id="nam">
                            @foreach (var nam in ViewBag.cacnam)
                            {
                                <option value="@nam" @(ViewBag.namchon == nam ? "selected" : "")>@nam</option>
                            }
                        </select>

                        <button type="submit">Chọn</button>
                    }
                </div>
                <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
                <script src="~/Scripts/jquery-3.4.6.min.js"></script>
                <!-- Thẻ canvas với mã JavaScript được đặt trực tiếp -->
                <canvas id="barChart" style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%; display: block; width: 360px;"> </canvas>

                <script>
                            // Dữ liệu từ ViewBag
                            var chartData = @Html.Raw(Json.Encode(ViewBag.ChartData));

                            // Lấy thẻ canvas
                            var ctx = document.getElementById('barChart').getContext('2d');

                            // Vẽ biểu đồ cột
                    var mixedChart = new Chart(ctx, {
                        type: 'bar', // Loại của biểu đồ cột
                        data: {
                            labels: Object.keys(chartData),
                            datasets: [{
                                label: 'Tổng tiền',
                                data: Object.values(chartData),
                                backgroundColor: 'rgba(75, 192, 192, 0.8)',
                                borderColor: 'rgba(75, 192, 192, 1)',
                                borderWidth: 1,
                                barThickness: 50
                            }, {
                                type: 'line', // Loại của biểu đồ đường
                                label: 'Biểu đồ đường',
                                data: Object.values(chartData),
                                fill: false,
                                borderColor: 'rgba(255, 99, 132, 1)',
                                borderWidth: 2
                            }],
                        },
                        options: {
                            scales: {
                                x: {
                                    type: 'category',
                                    barPercentage: 0.2, // Điều chỉnh độ rộng của cột
                                },
                                y: {
                                    beginAtZero: true
                                }
                            }

                        }
                    });
                </script>


            </div>
        </div>
