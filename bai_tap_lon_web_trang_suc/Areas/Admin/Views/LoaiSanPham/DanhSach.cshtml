@model IEnumerable<bai_tap_lon_web_trang_suc.Models.LoaiSanPham>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Web Trang Sức</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="~/Content/clients/plugins/fontawesome-free/css/all.min.css">
    <!-- overlayScrollbars -->
    <link rel="stylesheet" href="~/Content/clients/plugins/overlayScrollbars/css/OverlayScrollbars.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Content/clients/dist/css/adminlte.min.css">
    <style>
        .them_moi {
            display: flex;
            flex-direction: row;
            align-items: center;
            width: 100%;
            height: 50px;
        }

            .them_moi p {
                margin-right: 5px;
                padding-top: 14px;
            }
    </style>
</head>
<body class="hold-transition dark-mode sidebar-mini layout-fixed layout-navbar-fixed layout-footer-fixed">
    <div class="wrapper">

        <!-- Preloader -->
        <div class="preloader flex-column justify-content-center align-items-center">
            <img class="animation__wobble" src="~/Content/clients/dist/img/AdminLTELogo.png" alt="AdminLTELogo" height="60" width="60">
        </div>

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-dark">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="/Admin/Home/Index" class="nav-link">Home</a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="#" class="nav-link">Contact</a>
                </li>
            </ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <!-- Navbar Search -->
                <li class="nav-item">
                    <a class="nav-link" data-widget="navbar-search" href="#" role="button">
                        <i class="fas fa-search"></i>
                    </a>
                    <div class="navbar-search-block">
                        <form class="form-inline">
                            <div class="input-group input-group-sm">
                                <input class="form-control form-control-navbar" type="search" placeholder="Search" aria-label="Search">
                                <div class="input-group-append">
                                    <button class="btn btn-navbar" type="submit">
                                        <i class="fas fa-search"></i>
                                    </button>
                                    <button class="btn btn-navbar" type="button" data-widget="navbar-search">
                                        <i class="fas fa-times"></i>
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </li>


               
                <li class="nav-item">
                    <a class="nav-link" href="~/Admin/DangNhap/DangXuat" role="button" style="display:flex; align-items:center ;justify-content:center">
                        <img src="~/Content/clients/dist/img/credit/logout.png" style="width:30px" />
                    </a>
                </li>
                @* <li class="nav-item">
                        <a class="nav-link" data-widget="control-sidebar" data-slide="true" href="#" role="button">
                            <i class="fas fa-th-large"></i>
                        </a>
                    </li>*@
            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="index3.html" class="brand-link">
                <img src="~/Content/clients/dist/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
                <span class="brand-text font-weight-light">Admin</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user panel (optional) -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="~/Content/clients/dist/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
                    </div>
                    <div class="info">


                        <a href="#" class="d-block">@ViewBag.session_admin</a>
                    </div>
                </div>

                <!-- SidebarSearch Form -->
                <div class="form-inline">
                    <div class="input-group" data-widget="sidebar-search">
                        <input class="form-control form-control-sidebar" type="search" placeholder="Search" aria-label="Search">
                        <div class="input-group-append">
                            <button class="btn btn-sidebar">
                                <i class="fas fa-search fa-fw"></i>
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <!-- Add icons to the links using the .nav-icon class
    with font-awesome or any other icon font library -->
                        <li class="nav-item">
                            <a href="~/Admin/NhaCungCap/DanhSach" class="nav-link active">
                                <i class="nav-icon fas fa-table "></i>
                                <p>
                                    Nhà cung cấp
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="~/Admin/PhieuNhap/DanhSach" class="nav-link active">
                                <i class="nav-icon fas fa-table "></i>
                                <p>
                                    Phiếu nhập
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="~/Admin/LoaiSanPham/DanhSach" class="nav-link active">
                                <i class="nav-icon fas fa-table "></i>
                                <p>
                                    Loại sản phẩm
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="~/Admin/SanPham/DanhSach" class="nav-link active">
                                <i class="nav-icon fas fa-table "></i>
                                <p>
                                    Sản phẩm
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="~/Admin/HinhAnh/DanhSach" class="nav-link active">
                                <i class="nav-icon fas fa-table "></i>
                                <p>
                                    Hình ảnh
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="~/Admin/ChiTietPhieuNhap/DanhSach" class="nav-link active">
                                <i class="nav-icon fas fa-table "></i>
                                <p>
                                    Chi tiết phiếu nhập
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="~/Admin/DonHang/DanhSach" class="nav-link active">
                                <i class="nav-icon fas fa-table "></i>
                                <p>
                                    Đơn hàng
                                </p>
                            </a>
                        </li>
                      
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">


            <div style="width:100% ; margin-left:10px ; margin-top:5px">

                <p>
                    @Html.ActionLink("Thêm loại mới", "Them_LoaiSP")
                </p>
                <table class="table">
                    <tr>
                        <th>
                            ID loại sản phẩm
                        </th>
                        <th>
                            Tên loại sản phẩm
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.ID_loaiSanPham
                            </td>
                            <td>
                                @item.TenloaiSanPham
                            </td>
                            <td>
                                @Html.ActionLink("Sửa", "Sua_loaiSP", new { id = item.ID_loaiSanPham }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.ID_loaiSanPham })
                            </td>
                        </tr>
                    }

                </table>

            </div>


        </div>
        <!-- /.content-wrapper -->
        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
        </aside>
        <!-- /.control-sidebar -->
    
    </div>
    <!-- ./wrapper -->
    <!-- REQUIRED SCRIPTS -->
    <!-- jQuery -->
    <script src="~/Content/clients/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap -->
    <script src="~/Content/clients/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- overlayScrollbars -->
    <script src="~/Content/clients/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Content/clients/dist/js/adminlte.js"></script>

    <!-- PAGE PLUGINS -->
    <!-- jQuery Mapael -->
    <script src="~/Content/clients/plugins/jquery-mousewheel/jquery.mousewheel.js"></script>
    <script src="~/Content/clients/plugins/raphael/raphael.min.js"></script>
    <script src="~/Content/clients/plugins/jquery-mapael/jquery.mapael.min.js"></script>
    <script src="~/Content/clients/plugins/jquery-mapael/maps/usa_states.min.js"></script>
    <!-- ChartJS -->
    <script src="~/Content/clients/plugins/chart.js/Chart.min.js"></script>

    <!-- AdminLTE for demo purposes -->
    <script src="~/Content/clients/dist/js/demo.js"></script>
    <!-- AdminLTE dashboard demo (This is only for demo purposes) -->
    <script src="~/Content/clients/dist/js/pages/dashboard2.js"></script>
</body>
</html>









